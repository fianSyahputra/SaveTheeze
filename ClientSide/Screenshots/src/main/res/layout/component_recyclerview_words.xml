<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:background="@drawable/background_componentrecyclerview_word">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/componentRecyclerView_words_textInputLayout_word"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:hint="Word"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/componentRecyclerView_words_editText_word"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hello World"
            android:textSize="20dp"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/componentRecyclerView_words_textInputLayout_translate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/componentRecyclerView_words_textInputLayout_word"
        android:hint="Translated To"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/componentRecyclerView_words_editText_translate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hallo Dunia"
            android:textSize="20dp"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/componentRecyclerView_words_textInputLayout_translate"

        >

        <Button
            android:id="@+id/componentRecyclerView_words_btnEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Edit Word"
            android:layout_margin="10dp"
            />

        <Button
            android:id="@+id/componentRecyclerView_words_btnDone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Done"
            android:layout_margin="10dp"
            />

        <Button
            android:id="@+id/componentRecyclerView_words_btnDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Delete"
            android:layout_margin="10dp"
            />

    </androidx.appcompat.widget.LinearLayoutCompat>



</androidx.constraintlayout.widget.ConstraintLayout>